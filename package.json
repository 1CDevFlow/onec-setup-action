{
  "name": "onec-setup-action",
  "description": "GitHub Action для установки 1C:Enterprise и 1C:EDT",
  "version": "1.0.0",
  "author": "1CDevFlow",
  "private": true,
  "homepage": "https://github.com/1CDevFlow/onec-setup-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1CDevFlow/onec-setup-action.git"
  },
  "bugs": {
    "url": "https://github.com/1CDevFlow/onec-setup-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "1c",
    "enterprise",
    "edt",
    "onec"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest --maxWorkers=1 --forceExit",
    "test:unit": "npx jest --testPathPattern=__tests__/unit",
    "test:unit:fast": "npx jest --testPathPattern=__tests__/unit --no-coverage --maxWorkers=1",
    "test:unit:ci": "npx jest --testPathPattern=__tests__/unit --maxWorkers=1 --forceExit",
    "test:integration": "npx jest --testPathPattern='__tests__/(installer|ongetjs|downloader).test.ts'",
    "test:integration:simple": "npx jest --testPathPattern=__tests__/integration-simple.test.ts",
    "test:integration:with-credentials": "./script/test-with-credentials.sh",
    "test:setup": "./script/setup-test-env.sh",
    "test:cleanup": "./script/cleanup-test-env.sh",
    "test:all": "npx jest --maxWorkers=1 --forceExit",
    "test:watch": "npx jest --watch --no-coverage",
    "coverage": "npx jest --coverage --maxWorkers=1 --forceExit && npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "format:fix": "npm run format:write",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest --maxWorkers=1 --forceExit",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "testTimeout": 30000,
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "./src/**",
      "!./src/**/*.d.ts",
      "!./src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "dependencies": {
    "@actions/cache": "^4.0.3",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.5.0",
    "@actions/io": "^2.0.0",
    "@actions/tool-cache": "^2.0.2",
    "compare-versions": "^6.1.1",
    "cookiejar": "^2.1.4",
    "node-fetch": "^2.7.0",
    "node-html-parser": "^6.1.13"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookiejar": "^2.1.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.10.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
